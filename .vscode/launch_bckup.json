    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "cwd": "${workspaceRoot}",
            "port": 3100,
            "program": "${workspaceRoot}/node_modules/botpress/bin/botpress",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--inspect=3100"
            ],
            "args": [ "start" ],
            "stopOnEntry": false
        }
    ]
}